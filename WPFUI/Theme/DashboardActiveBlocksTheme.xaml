<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Border}"
           x:Key="DashboardActiveBlocksTheme">
        <Style.Setters>
            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,215,125"></RectangleGeometry>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="215"></Setter>
            <Setter Property="Height" Value="125"></Setter>
            <Setter Property="Margin" Value="0 0 15 0"></Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>