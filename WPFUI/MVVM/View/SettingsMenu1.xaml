<UserControl x:Class="WPFUI.MVVM.View.SettingsMenu1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFUI.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="490" Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  Style="{StaticResource ScrollBarTheme}">
        <StackPanel>
            <TextBlock Foreground="White" 
                       FontSize="{StaticResource SubheadingFontSize}"
                       Text="Sub-category">
            </TextBlock>
            
            <Grid Margin="0 5 0 0">
                <TextBlock Foreground="White"
                           FontSize="{StaticResource TextFontSize}"
                           Text="Toggle Setting">
                </TextBlock>
                <Border Width="200" Height="2000" Background="#494c56">
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
