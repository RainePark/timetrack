<UserControl x:Class="WPFUI.MVVM.View.BlocksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFUI.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="720" Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  Style="{StaticResource ScrollBarTheme}">
        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Blocks"
                       Foreground="White"
                       FontSize="40"
                       HorizontalAlignment="Left"
                       Margin="20 0 0 15">
            </TextBlock>
            <StackPanel Orientation="Vertical">
                <Border Width="675" Height="125" Background="#494c56" Margin="0,0,5,15">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,675,125"></RectangleGeometry>
                    </Border.Clip>
                    <Grid Margin="10 9 10 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="60"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 5 0">
                            <Grid Margin="0 0 5 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="33"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="33"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Border Width="31" Height="31" BorderThickness="0">
                                    <Border.Clip>
                                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,31,31"></RectangleGeometry>
                                    </Border.Clip>
                                    <Border.Background>
                                        <ImageBrush Stretch="UniformToFill" ImageSource="/Images/iconbackground-white.ico"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="25" Height="25" BorderThickness="0">
                                    <Border.Background>
                                        <ImageBrush Stretch="UniformToFill" ImageSource="/Images/test1.ico"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <Grid Margin="0 0 5 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="33"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="33"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Border Width="31" Height="31" BorderThickness="0">
                                    <Border.Clip>
                                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,31,31"></RectangleGeometry>
                                    </Border.Clip>
                                    <Border.Background>
                                        <ImageBrush Stretch="UniformToFill" ImageSource="/Images/iconbackground-white.ico"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="25" Height="25" BorderThickness="0">
                                    <Border.Background>
                                        <ImageBrush Stretch="UniformToFill" ImageSource="/Images/test2.ico"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </StackPanel>
                        <TextBlock Text="Block 1"
                                   Foreground="White"
                                   Background="Transparent"
                                   FontSize="{StaticResource SubheadingFontSize}"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2">
                        </TextBlock>
                        <TextBlock Text="Block Type"
                                   Foreground="White"
                                   Background="Transparent"
                                   FontSize="{StaticResource TextFontSize}"
                                   Margin="0 4 0 0"
                                   Grid.Row="2"
                                   Grid.Column="1">
                        </TextBlock>
                        <TextBlock Text="Block Details/Schedule"
                                   Foreground="White"
                                   Background="Transparent"
                                   FontSize="{StaticResource TextFontSize}"
                                   Margin="0 4 0 0"
                                   Grid.Row="3"
                                   Grid.Column="1">
                        </TextBlock>
                        
                        <Border Width="31" Height="31" BorderThickness="0" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,31,31"></RectangleGeometry>
                            </Border.Clip>
                            <Border.Background>
                                <ImageBrush Stretch="UniformToFill" ImageSource="/Images/iconbackground-white.ico"/>
                            </Border.Background>
                        </Border>
                        
                        <TextBlock Text="Enabled"
                                   Foreground="White"
                                   Background="Transparent"
                                   FontSize="{StaticResource TextFontSize}"
                                   Margin="0 4 0 0"
                                   TextAlignment="Right"
                                   Grid.Row="3"
                                   Grid.Column="2">
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
